{% assign theme_layout = settings.homepage_view %}
<section class="page-section support-page {% if theme_layout == 'option5' or  theme_layout == 'option6'%} support-home5 {% elsif theme_layout == 'option4' %} support-home4 {% else %} fadeInUp alo-animate {% endif %} " data-wow-duration="1s" data-wow-delay="0.4s" id="support">
	<h2 class="hidden">policy</h2>
	<div class="container">
		<div class="support-policy {% if theme_layout == 'option5' %} fadeInUp alo-animate {% endif %} ">
			<div class="support-footer-inner row">
				{% for i in (1..3) %}
					{% capture this_icon %}support_item_{{i}}_icon{% endcapture %}
					{% assign icon = settings[this_icon] %}
					{% capture this_description %}support_item_{{i}}_text{% endcapture %}
					{% assign description = settings[this_description] %}
					{% capture this_url %}support_item_{{i}}_url{% endcapture %}
					{% assign url = settings[this_url] %}
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="row-normal clearfix">
							<div class="col-icon">
								<div class="support-icon square-round"><i class="{{icon}}"><span class="hidden">hidden</span></i></div>
							</div>
							<div class="col-text">
								<div class="support-info">
									<div class="info-title">
										{% if url != "" %}
											<a target="_blank" href="{{url}}">
											{{description}}
											</a>
										{% else %}
											{{description}}
										{% endif %}
									
									</div>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</section>