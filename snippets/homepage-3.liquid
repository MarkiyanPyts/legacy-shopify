{% if settings.block_banner_enable %}
	{% include 'init-block-banner' %}
	<!-- BLOCK BANNER -->
	<section id="block-banner">
		<h2 class="hidden">banner</h2>
		<div class="container">
			<div class="row">
				<div class="pa-lines container-nor banner-home4">
					<div class="banner1 banner-inner">
						<div class="banner1-1">
							<div class="banner-inner-left col-lg-3 col-md-3 col-sm-3 col-xs-12 fadeInUp alo-animate" >
								<div class="banner-inner-content">
									<div class="column-normal column-1-2">
										<a href="{{banner_1_url}}"><img src="{{ banner_1_image }}" alt="{{settings.banner_1_des_1}}" class="img-responsive-normal"> </a>
										<div class="box-text box-text-possion">
											{% assign banner1_title = banner_1_collection.title | split: ' ' %}
											<h4>{{ settings.banner_1_des_1 }}</h4>
											{% for word in banner1_title %}
												<h3>{{ word }}</h3>
											{% endfor %}
										</div>
									</div>
								</div>
							</div>
							<div class="banner-inner-centter col-lg-6 col-md-6 col-sm-6 col-xs-12 text-right fadeInUp alo-animate" >
								<div class="banner-inner-content">
									<div class="column column-1-2">
										<a href="{{banner_2_url}}"><img src="{{ banner_2_image }}" alt="{{settings.banner_2_des_1}}" class="img-responsive-normal"> </a>
										<div class="box-text box-text-possion">
											<h4>{{ banner_2_collection.title }}</h4>
											<h3>{{ settings.banner_2_des_1 }}</h3>
										</div>
									</div>
								</div>
							</div>
							<div class="banner-inner-right col-lg-3 col-md-3 col-sm-3 col-xs-12 size1of3-last fadeInUp alo-animate">
								<div class="banner-inner-content">
									<div class="column column-1-3">
										<a href="{{banner_3_url}}">
											<img src="{{ banner_3_image }}" alt="{{settings.banner_3_des_1}}" class="img-responsive-normal">
										</a>
										<div class="box-text box-text-possion">
											{% assign banner3_title = banner_3_collection.title | split: ' ' %}
											<h4>{{ settings.banner_3_des_1 }}</h4>
											{% for word in banner3_title %}
												<h3>{{ word }}</h3>
											{% endfor %}
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- /BLOCK BANNER -->
{% endif %}





