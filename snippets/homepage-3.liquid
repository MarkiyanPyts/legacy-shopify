<!-- Give ability to enable/disable in admin -->
<div class="jumbotron">
  <div class="wrapper">
    <h1>Florida's Favorite Beard Care Products</h1>
    <p>Enjoy a strong, soft beard without the discomforts of dry, itchy skin.</p>
    <a href="/products" class="btn btn-lg btn-success">Shop Now</a>
    <a href="/freesample" class="btn btn-lg btn-primary">Free Sample</a>
    <p>
      <small>Sample Citrus, Camper, and Spice free with S&amp;H.</small>
    </p>
  </div>
</div>

{% comment %}
<div id="main"> <!-- Give ability to enable/disable in admin -->
    <!-- SLIDER -->
    <section class="page-section no-padding">
    	<h2 class="hidden">slider</h2>
        <div class="container full-width">
	        {% if settings.slideshow_enable %}
				<div id="main">
				    <!-- SLIDER -->
				    <section class="page-section no-padding">
				    	<h2 class="hidden">slider</h2>
				        <div class="container full-width">
							{% include 'owl-slide-main' %}
					    </div>
				    </section>
				    <!-- /SLIDER -->
				</div>
			{% endif %}
			<!-- /OWL SLIDE SHOW -->
        </div>
    </section>
    <!-- /SLIDER -->
</div>
{%endcomment%}

