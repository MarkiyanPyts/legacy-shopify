.top-line {
    position: fixed;
    width: 100%;
    z-index: 10000;
    height: 32px;
  }
  
  body.landing #header2, #header2 .header-content {
    padding-top: 32px;
  }
  
.top-line {
  background-color: #809EAE;
  color: white;
}

.top-line .welcome-msg, .top-line .welcome-msg a {
  font-size: 12px;
  color: white;
  text-transform: initial;
}

.top-line .welcome-msg a:hover {
  text-decoration: underline;
}

body.landing .jumbotron {
  position: relative;
  background: #080e0b;
  color: #fff;
}

body.landing .jumbotron {
  padding:0
}

body.landing .jumbotron .wrapper {
  max-width: 1040px;
  position: relative;
  margin: 0 auto;
  width: 100%;
  max-width: 1000px;
  padding: 0 20px;
  text-align:center;
  padding: 132px 40px 125px 40px;
}
body.landing .jumbotron .wrapper h1 {
  line-height: 1.1em;
}

body.landing .jumbotron .wrapper p {
  margin-bottom: 24px;
}

body.landing .jumbotron .wrapper small {
  font-size: 70%;
  opacity: .45;
}
