<section class="page-section page-login">
  <h2 class="hidden">page</h2>
    <div class="container">
      <div class="row">
        <div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
          <div class="form-box">
            <div class="form-top">
              <div class="row">
              	<div class="col-xs-9">
                  <h3>Reset Password</h3>
                  <p class="text-muted">Enter a new password for your account.</p>
                </div>
                <div class="col-xs-3 text-right">
                  <i class="fa fa-key fa-5x form-box-icon"></i>
                </div>
              </div>
            </div>
            <div class="form-bottom">
              {% form 'reset_customer_password' %}
              {% if form.errors %}
              <div class="alert alert-warning alert-dismissable">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <i class="fa fa-fw fa-warning"></i>
                {% for field in form.errors %}	
                	{{form.errors.messages[field]}}
                {% endfor %}
              </div>
              {% endif %}
              {% if form.posted_successfully? %}
              {% assign reset_success = true %}
              {% endif %}
              <div class="form-group">              	
                <label class="sr-only" for="password">{{ 'customer.reset_password.password' | t }}</label>
                <input id="password" type="password" name="customer[password]" placeholder="{{ 'customer.reset_password.password' | t }}" class="form-control input-lg">
              </div>
              <div class="form-group"> 
                <label class="sr-only" for="passwordConfirm">{{ 'customer.reset_password.password_confirm' | t }}</label>
                <input id="passwordConfirm" type="password" name="customer[password_confirmation]" placeholder="{{ 'customer.reset_password.password_confirm' | t }}" class="form-control input-lg">
              </div>
              <button type="submit" class="btn btn-success btn-lg btn-block">Confirm New Password</button>
              {% endform %}
            </div>
          </div>
        </div>
      </div>
  </div>
</section>


{% comment %}

<section class="page-section page-login">
  <h2 class="hidden">page</h2>
  <div class="container">
    <div class="row">
      <div class="login-left col-lg-6 col-md-6 col-sm-6 col-xs-12 col-lg-offset-3">
          {% form 'reset_customer_password' %}
            <div class="block-title">
              <h2>{{ 'customer.reset_password.title' | t | upcase }}</h2>
              <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>
            </div>
            {{ form.errors | default_errors }}
            <div class="row">
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
                  <input class="form-control" type="password" value="" name="customer[password]" id="ResetPassword" class="{% if form.errors contains 'password' %} input--error{% endif %}" placeholder="{{ 'customer.reset_password.password' | t }}">
                </div>
              </div>
              <div class="col-sm-6">
                <div class="form-group">
                  <label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
                  <input class="form-control"  type="password" value="" name="customer[password_confirmation]" id="PasswordConfirmation" class="{% if form.errors contains 'password_confirmation' %} input--error{% endif %}" placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
                </div>
              </div>
            </div>
            <button type="submit" class="button"><span>{{ 'customer.reset_password.submit' | t }}</span></button>
          {% endform %}
          <br/>
      </div>
    </div>
  </div>
</section>

{% endcomment %}